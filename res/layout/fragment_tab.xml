<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp" 
    android:background="#cccccc"
    />
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="6dp"

    >

    <TextView
        android:id="@+id/jingdian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jingdian"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/icon_ditu" />
     <TextView
         android:id="@+id/youhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/youhui"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/icon_ditu" />
      <TextView
          android:id="@+id/xinwen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xinwen"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/icon_ditu" />
       <TextView
           android:id="@+id/zuji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zuji"
        android:textSize="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableTop="@drawable/icon_ditu" />
</LinearLayout>
</LinearLayout>
